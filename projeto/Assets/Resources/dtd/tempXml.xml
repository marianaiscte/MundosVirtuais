<?xml version="1.0"?>
<!DOCTYPE game SYSTEM "play-out.dtd">
<game name="game test case">
	<roles>
		<role name="player 1"/>
		<role name="player 2"/>
	</roles> 	
	<board width="3" height="2"> 		
		<village/> <forest/> <forest/> 		
		<sea/> <plain/> <mountain/> 	
	</board> 	
	<turns> 	
		<turn> 		
			<unit id="1" role="player 1" type="soldier" action="spawn" x="1" y="1"/> 		
			<unit id="2" role="player 1" type="archer" action="spawn" x="1" y="1"/> 		
			<unit id="3" role="player 2" type="catapult" action="spawn" x="3" y="2"/>	
		</turn>	
		<turn>		
			<unit id="1" role="player 1" type="soldier" action="move_to" x="2" y="1"/> 		
			<unit id="2" role="player 1" type="archer" action="hold" x="1" y="1"/> 		
			<unit id="3" role="player 2" type="catapult" action="attack" x="2" y="1"/> 		
			<unit id="4" role="player 1" type="catapult" action="spawn" x="2" y="2"/>	
		</turn>
		<turn>		
			<unit id="2" role="player 1" type="archer" action="hold" x="1" y="1"/> 		
			<unit id="3" role="player 2" type="catapult" action="attack" x="2" y="2"/> 		
			<unit id="4" role="player 1" type="catapult" action="attack" x="3" y="2"/>	
		</turn> 	
	</turns>
</game>